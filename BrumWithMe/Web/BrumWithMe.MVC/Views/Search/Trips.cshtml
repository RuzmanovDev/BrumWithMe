@model SearchTripResultViewModel

<section class="container">
    <div class="shadow-container z-depth-3 row">
        <h3 class="center-align">Намерени пътувания</h3>
        <div class="col s12">
            @Html.Action(nameof(SearchController.Search), "Search")
        </div>
        @if (Model.Trips?.Count() > 0)
        {
            foreach (var trip in Model.Trips)
            {
                @Html.Partial("_Trip", trip)
            }
        }
        else
        {
            <h2 class="center-align">Няма резултат ... :( </h2>
        }
    </div>
</section>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('input.autocomplete').autocomplete({
                data: {
                    "Apple": null,
                    "AppArianale": null,
                    "Atanas": null,
                    "Aaairplane": null,
                    "Microsoft": null,
                    "Google": 'http://placehold.it/250x250'
                },
                limit: 20, // The max amount of results that can be shown at once. Default: Infinity.
            });
        });
    </script>
}

@model IEnumerable<TripBasicInfoViewModel>
@if (Model.Count() > 0)
{
    foreach (var trip in Model)
    {
        @Html.Partial("_Trip", trip)
    }
    <section class="col s8 offset-s2">
        <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
            @for (int i = 0; i < 10; i++)
            {
                <li class="active">
                    @Ajax.ActionLink((i + 1).ToString(),
               nameof(SearchController.LoadTrips),
               new { page = i, origin = this.Request.QueryString["origin"], destination = this.Request.QueryString["destination"] },
               new AjaxOptions
               {
                   UpdateTargetId = "result",
                   InsertionMode = InsertionMode.Replace
               })
                </li>
            }
            <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
        </ul>
    </section>
}
else
{
    <h2 class="center-align">Няма резултат ... :( </h2>
}

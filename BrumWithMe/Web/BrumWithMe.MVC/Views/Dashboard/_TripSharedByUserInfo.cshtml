@model BrumWithMe.Data.Models.CompositeModels.Trip.TripInfoWithUserRequests
<section class="card small col s4">
    <div class="card-content col s12">
        <span class="card-title activator grey-text text-darken-4">
            @Model.OriginName - @Model.DestinationName
            @Ajax.ActionLink("more_vert", nameof(DashboardController.PassangersInfo), new { tripId = Model.Id },
           new AjaxOptions() { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = string.Concat("passangers-info", Model.Id) },
           new { @class = "material-icons right activator" })
        </span>
        <a href="/trip/tripdetails/@Model.Id">
            <div>
                <div class="card-image waves-effect waves-block waves-light mytrip-car-image">
                    <img class="activator" src="@Model.CarAvatarImage">
                </div>
                <div class="col s8 offset-s2">
                    <span class="date" title="Дата на погегляне"><i class="material-icons">today</i> @Model.TimeOfDeparture.ToString("dd.MMM")</span>
                    <span class="time" title="Час на потегляне"><i class="material-icons">query_builder</i> @Model.TimeOfDeparture.ToString("hh.mm")</span>
                </div>
                <div class="col s8 offset-s2">
                    <span class="seats" title="Места">
                        <i class="material-icons">perm_identity</i> @Model.TakenSeats/@Model.TotalSeats
                    </span>
                    <span class="seats" title="Места">
                        <i class="material-icons">loyalty</i> $@Model.Price
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
            @Model.OriginName - @Model.DestinationName
            <i class="material-icons right">close</i>
        </span>
        <section id=@string.Concat("passangers-info", Model.Id)></section>
    </div>
</section>

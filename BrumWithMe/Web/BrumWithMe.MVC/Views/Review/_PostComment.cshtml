@model PostCommentViewModel

@using (Ajax.BeginForm(nameof(ReviewController.PostComment),
                null,
                new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "comments", InsertionMode = InsertionMode.Replace },
                new { @class = "col s6" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="input-field col s12">
            <textarea id="commet-textarea" class="materialize-textarea" name="Content"></textarea>
            <label for="comment-textarea">Коминтар</label>
            @Html.HiddenFor(x => x.ReviewsUserId)
        </div>
        <div class="col s12">
            <input name="Rating" type="radio" id="rating1" value="1" />
            <label for="rating1">1</label>
            <input name="Rating" type="radio" id="rating2" value="2" />
            <label for="rating2">2</label>
            <input name="Rating" type="radio" id="rating3" value="3" />
            <label for="rating3">3</label>
            <input name="Rating" type="radio" id="rating4" value="4" />
            <label for="rating4">4</label>
            <input name="Rating" type="radio" id="rating5" value="5" />
            <label for="rating5">5</label>
        </div>
        <div class="col s12">
            <input type="submit" class="btn col s6 offset-s4" value="Send review" />
        </div>
    </div>
}
